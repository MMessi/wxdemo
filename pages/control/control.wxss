/* pages/control/control.wxss */
.container {
  height: 100%;
  display: block;
  padding: 0;
  border: 1px solid #d8e1e6
}
.swiper_box{
  height: 480rpx;
}
.meetItem{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 400rpx; 
  background-color: #ADD8E6;
}
.meetHeader{
  display: flex;
  font-size: 35rpx
}
.meetHeader text{
  width: 100%;
  line-height: 80rpx;
  background-color: #FFFFFF;
}
.meetIcon{
  width: 80rpx;
  height: 80rpx;
}
.meetInfo{
   margin-top: 10rpx;
   display: flex;
   flex-direction: column;
   font-size: 30rpx;
   color: #FFFAFA;
   padding-left: 80rpx;
}
.meetInfo text{
  line-height: 70rpx;
}
.meetCtrl{
   display: flex;
   justify-content: flex-end;
   align-items: center;
}
.meetCtrl button{
  font-size:25rpx;
  margin: 0px 0px 0px 5px;  
}
.empty-content{
  display: flex;
  position: absolute;
  top:300rpx;
  left: 150rpx;
  font-size:30rpx;
  flex-direction: column;
  align-items: center
}
.empty-icon{
  width: 400rpx;
  height: 300rpx
}

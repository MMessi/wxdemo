/* pages/main/main.wxss */
.container{
  width:100%;
  height: 100%;
  background-color: #F2f2f2;
  padding: 0;
}

.search-container{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 150rpx;
  background:rgba(105,195,170,1);
  font-size:30rpx;

}
.search-content{
  width: 70%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-radius:20rpx 0 0 20rpx;
  background: #ffffff;
}
.search-icon{
  width: 80rpx;
  height: 80rpx;
}
.search-content input{
  margin-left: 30rpx;
  height: 80rpx;
}
.search-control{
   display: flex;
   justify-content: center;
   align-items: center;
   width: 15%;
   height: 80rpx;
   border-radius:0 20rpx 20rpx 0;
   background: blueviolet;
   color: #ffffff;
}
.addr-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
}
.addr-container checkbox{
  margin-left: 10rpx;
}
.addr-image{
  margin: 10rpx 20rpx;
}
.addr-icon{
  width: 70rpx;
  height: 70rpx;
}
.addr-edit{
  margin-left: 80rpx;
  text-decoration: underline;
  color: #1E94DA
}
